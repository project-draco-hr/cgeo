{
  if (null == nameForSorting) {
    final MatcherWrapper matcher=new MatcherWrapper(NUMBER_PATTERN,name);
    if (matcher.find()) {
      nameForSorting=name.replace(matcher.group(),StringUtils.leftPad(matcher.group(),6,'0'));
    }
 else {
      nameForSorting=name;
    }
  }
  return nameForSorting;
}
