{
  if (!pending) {
    throw new IllegalStateException("illegal position for attribute");
  }
  if (namespace == null) {
    namespace="";
  }
  String prefix=namespace.isEmpty() ? "" : getPrefix(namespace,false,true);
  writer.write(' ');
  if (!prefix.isEmpty()) {
    writer.write(prefix);
    writer.write(':');
  }
  writer.write(name);
  writer.write('=');
  char q=value.indexOf('"') == -1 ? '"' : '\'';
  writer.write(q);
  writeEscaped(value,q);
  writer.write(q);
  return this;
}
