{
  double diff=goal - actual;
  final boolean largeDiff=Math.abs(diff) > 5;
  double offset=0.0;
  if (diff < 0.0) {
    diff=diff + 360.0;
  }
 else   if (diff >= 360.0) {
    diff=diff - 360.0;
  }
  if (diff > 1.0 && diff <= 180.0) {
    offset=largeDiff ? 2.0 : 1.0;
  }
 else   if (diff > 180.0 && diff < 359.0) {
    offset=largeDiff ? -2.0 : -1.0;
  }
  return actual + offset;
}
