{
  final Button imageButton=(Button)findViewById(R.id.image_btn);
  if (cache.supportsLogImages()) {
    imageButton.setVisibility(View.VISIBLE);
    imageButton.setText(StringUtils.isNotBlank(imageUri.getPath()) ? res.getString(R.string.log_image_edit) : res.getString(R.string.log_image_attach));
  }
 else {
    imageButton.setVisibility(View.GONE);
  }
}
