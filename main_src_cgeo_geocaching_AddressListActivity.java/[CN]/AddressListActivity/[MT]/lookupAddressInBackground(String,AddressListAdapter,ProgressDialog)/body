{
  final Observable<Address> geocoderObservable=new AndroidGeocoder(this).getFromLocationName(keyword).onErrorResumeNext(MapQuestGeocoder.getFromLocationName(keyword)).onErrorResumeNext(GCGeocoder.getFromLocationName(keyword));
  AndroidObservable.bindActivity(this,geocoderObservable.toList()).subscribe(new Action1<List<Address>>(){
    @Override public void call(    final List<Address> addresses){
      waitDialog.dismiss();
      for (      final Address address : addresses) {
        adapter.add(address);
      }
    }
  }
,new Action1<Throwable>(){
    @Override public void call(    final Throwable throwable){
      finish();
      showToast(res.getString(R.string.err_unknown_address));
    }
  }
);
}
