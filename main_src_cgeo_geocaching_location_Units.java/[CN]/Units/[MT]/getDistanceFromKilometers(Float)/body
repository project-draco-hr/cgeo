{
  if (distanceKilometers == null) {
    return "?";
  }
  final ImmutablePair<Double,String> scaled=scaleDistance(distanceKilometers);
  String formatString;
  if (scaled.left >= 100) {
    formatString="%.0f";
  }
 else   if (scaled.left >= 10) {
    formatString="%.1f";
  }
 else {
    formatString="%.2f";
  }
  return String.format(formatString + " %s",scaled.left,scaled.right);
}
