{
  if (geo == null) {
    return;
  }
  try {
    latButton.setHint(cgBase.formatLatitude(geo.coordsNow.getLatitude(),false));
    lonButton.setHint(cgBase.formatLongitude(geo.coordsNow.getLongitude(),false));
  }
 catch (  Exception e) {
    Log.w(Settings.tag,"Failed to update location.");
  }
}
