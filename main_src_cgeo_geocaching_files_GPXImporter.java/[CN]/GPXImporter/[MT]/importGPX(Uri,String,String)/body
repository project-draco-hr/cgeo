{
  final ContentResolver contentResolver=fromActivity.getContentResolver();
  Log.i("importGPX: " + uri + ", mimetype="+ mimeType);
  @NonNull FileType fileType=new FileTypeDetector(uri,contentResolver).getFileType();
  if (fileType == FileType.UNKNOWN) {
    fileType=getFileTypeFromPathName(pathName);
  }
  if (fileType == FileType.UNKNOWN) {
    fileType=getFileTypeFromMimeType(mimeType);
  }
  final ImportThread importer=getImporterFromFileType(uri,contentResolver,fileType);
  if (importer != null) {
    importer.start();
  }
 else {
    importFinished();
  }
}
