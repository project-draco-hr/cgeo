{
  final SettingsActivity activity=(SettingsActivity)getContext();
  setOnPreferenceClickListener(new OnPreferenceClickListener(){
    @Override public boolean onPreferenceClick(    Preference preference){
      if (oAuthMapping.authActivity != null) {
        Intent authIntent=new Intent(preference.getContext(),oAuthMapping.authActivity);
        activity.startActivityForResult(authIntent,oAuthMapping.prefKeyId);
      }
      return false;
    }
  }
);
  activity.setOcAuthTitle(oAuthMapping.prefKeyId);
  return super.onCreateView(parent);
}
