{
  periodicUpdate.unsubscribe();
  super.onDetachedFromWindow();
  if (compassUnderlay != null) {
    compassUnderlay.recycle();
  }
  if (compassRose != null) {
    compassRose.recycle();
  }
  if (compassArrow != null) {
    compassArrow.recycle();
  }
  if (compassOverlay != null) {
    compassOverlay.recycle();
  }
}
