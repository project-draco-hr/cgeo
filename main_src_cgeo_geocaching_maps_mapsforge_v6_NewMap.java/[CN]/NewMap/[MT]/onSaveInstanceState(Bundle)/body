{
  super.onSaveInstanceState(outState);
  final MapState state=new MapState(mapView.getModel().mapViewPosition.getCenter(),mapView.getModel().mapViewPosition.getZoomLevel(),followMyLocation,false);
  outState.putParcelable(BUNDLE_MAP_STATE,state);
  if (historyLayer != null) {
    outState.putParcelableArrayList(BUNDLE_TRAIL_HISTORY,historyLayer.getHistory());
  }
}
