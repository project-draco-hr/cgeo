{
  final int inputLen=input.length();
  final StringBuilder output=new StringBuilder();
  for (int i=0; i < inputLen; i++) {
    char c=input.charAt(i);
    if (c > 300) {
      output.append("&#");
      output.append(Integer.toString(c));
      output.append(';');
    }
 else {
      output.append(c);
    }
  }
  return output.toString();
}
