{
  final Geopoint coords=wp.getCoords();
  if (coords != null) {
    gpx.startTag(PREFIX_GPX,"wpt");
    gpx.attribute("","lat",Double.toString(coords.getLatitude()));
    gpx.attribute("","lon",Double.toString(coords.getLongitude()));
    XmlUtils.multipleTexts(gpx,PREFIX_GPX,"name",prefix + wp.getGeocode().substring(2),"cmt",wp.getNote(),"desc",wp.getName(),"sym",wp.getWaypointType().toString(),"type","Waypoint|" + wp.getWaypointType().toString());
    gpx.endTag(PREFIX_GPX,"wpt");
  }
}
