{
  Preference p=getPreference(R.string.pref_dbonsdcard);
  p.setPersistent(false);
  p.setOnPreferenceClickListener(new OnPreferenceClickListener(){
    @Override public boolean onPreferenceClick(    final Preference preference){
      boolean oldValue=Settings.isDbOnSDCard();
      ((CgeoApplication)SettingsActivity.this.getApplication()).moveDatabase(SettingsActivity.this);
      return oldValue != Settings.isDbOnSDCard();
    }
  }
);
}
