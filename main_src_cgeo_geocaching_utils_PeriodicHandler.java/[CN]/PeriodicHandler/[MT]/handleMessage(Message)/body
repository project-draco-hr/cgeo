{
switch (msg.what) {
case START:
    removeMessages(ACT);
  sendEmptyMessage(ACT);
break;
case STOP:
removeMessages(ACT);
break;
case ACT:
final PeriodicHandlerListener listener=listenerRef.get();
if (listener != null) {
sendEmptyMessageDelayed(ACT,period);
listener.onPeriodic();
}
break;
default :
throw new UnsupportedOperationException();
}
}
