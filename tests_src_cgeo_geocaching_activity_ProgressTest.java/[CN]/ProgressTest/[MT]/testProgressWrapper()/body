{
  final Progress progress=new Progress();
  assertFalse(progress.isShowing());
  progress.show(getActivity(),"Title","Message",true,false);
  assertTrue(progress.isShowing());
  progress.setMessage("Test");
  assertTrue(progress.isShowing());
  for (int i=0; i < 2; i++) {
    progress.dismiss();
    assertFalse(progress.isShowing());
  }
}
